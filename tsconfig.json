{
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"],
  "paths": {
    "src": ["./src/*"]
  },
  "compilerOptions": {
    // Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": true,
    "emitDeclarationOnly": true,
    // Ensure that Babel can safely transpile files in the TypeScript project
    "isolatedModules": true,
    "outDir": "./dist",
  }
}